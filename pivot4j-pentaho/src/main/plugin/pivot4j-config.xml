<?xml version="1.0" encoding="UTF-8"?>

<!-- Pivot4J plugin configuration file. -->
<config>
	<!-- Appearance settings. -->
	<appearances>
		<ui-theme>
			<default>cruze</default>

			<available-themes>
				<theme name="aristo" description="Aristo theme" />
				<theme name="bootstrap" description="Bootstrap theme" />
				<theme name="cruze" description="Cruze theme" />
			</available-themes>
		</ui-theme>

		<!--
			For a complete list of available editor themes, please visit : 
			http://codemirror.net/demo/theme.html
		-->
		<editor-theme>ambiance</editor-theme>
	</appearances>

	<!-- Miscellaneous settings used for integration with other systems. -->
	<web>
		<!-- URI prefix for web resources like images or stylesheets. -->
		<resource-prefix>/api/repos/pivot4j/webapp</resource-prefix>

		<!-- Name of a session attribute variable for user locale. -->
		<locale-attribute>locale_override</locale-attribute>

		<!-- Name of a request parameter for view id. -->
		<view-parameter>ts</view-parameter>
	</web>
</config>